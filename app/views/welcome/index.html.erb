<div class="container">
  <h2 class="text-center">Welcome to Next Stop</h2>
  <div class="well">
    <h4>Please Select a Route.</h4>
    <%= form_tag(route_path, method: :get) do %>
      <%= collection_select :route, :id, @routes, :id, :short_name %>
      <br><br>
      <%= submit_tag 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>